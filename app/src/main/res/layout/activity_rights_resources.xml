<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".rights.RightsResources">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on the Civil Rights Office?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on the Fair and Fraud Hearings Department?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on Complaint and Incident Intake?" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are my rights in long-term care?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the Non-discrimination Statement?" />

</LinearLayout>