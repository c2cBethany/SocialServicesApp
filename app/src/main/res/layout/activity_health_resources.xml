<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Health.HealthResources">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on Medicare?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on Medicaid and the Children's Health Insurance Program (CHIP)?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on Clinics, Health Organizations and Resource Centers?" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on kidney healthcare?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on Hemophilia?" />

</LinearLayout>