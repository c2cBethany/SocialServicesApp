<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".disasterAssistance.DisasterAssistanceServices">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to get started on disaster assistance process?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to find providers?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want information on the The Disaster Supplemental Nutrition Assistance (SNAP) program?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call 2-1-1 Disaster Assistance"/>
</LinearLayout>